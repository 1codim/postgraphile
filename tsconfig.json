{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src", "typings"],
  "exclude": [
    "index.js",
    "node_modules",
    "build",
    "examples",
    "utils",
    "resources",
    "src/postgraphile/graphiql",
    "__tests__",
    "**/__tests__",
    "*-test.js"
  ]
}
